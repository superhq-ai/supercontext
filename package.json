{
	"name": "superhq",
	"private": true,
	"version": "0.0.1",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently --names \"WEB,API,MCP\" \"bun run dev:web\" \"bun run dev:api\" \"bun run dev:mcp\"",
		"dev:web": "bun --cwd apps/web dev",
		"dev:api": "bun --cwd apps/api dev",
		"dev:mcp": "bun --cwd apps/mcp dev",
		"build": "bun run build:web && bun run build:api && bun run build:mcp",
		"build:web": "bun --cwd apps/web build",
		"build:api": "bun --cwd apps/api build",
		"build:mcp": "bun --cwd apps/mcp build",
		"typecheck": "bunx --bun tsc"
	},
	"devDependencies": {
		"concurrently": "^9.2.0"
	}
}
